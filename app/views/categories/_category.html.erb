<div id="<%= dom_id(category) %>" class="d-flex align-items-start justify-content-between">
  <h4><%= category.name %></h4>
  <span class="badge bg-secondary rounded-pill text-light">
    <% if category.discussions_count.nil? %>
      0
    <% else %>
      <%= category.discussions_count %>
    <% end %>
  </span>
</div>
